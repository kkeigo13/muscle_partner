<%= form_tag("/tweet/#{@tweet.id}", method: :patch ) do %>
    <input placeholder="日付" type="date" name="work_date" value="<%= @tweet.work_date %>" >
    <input placeholder="メニュー" type="string" name="menu_name" value="<%= @tweet.menu_name %>">
    <input placeholder="回数(半角入力)" type="integer" name="count" value="<%= @tweet.count %>">回
    <textarea cols="20" name="remarks" placeholder="備考" rows="5" value="<%= @tweet.remarks %>"></textarea>
    <input type="submit" value="SENT">
<% end %>