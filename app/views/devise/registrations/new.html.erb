<h2 class="sign_up_h2">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field  sign_up_field">
      <%= f.label :ニックネーム %><em>(6文字以内)</em><br />
      <%= f.text_field :nick_name, autofocus: true, maxlength: "6", placeholder: "ニックネーム（必須）" %>
  </div>
  <div class="field sign_up_field">
      <%= f.label :アイコン画像 %>
      <%= f.file_field :icon_image %>
  </div>

  <div class="field sign_up_field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field sign_up_field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field sign_up_field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions sign_up_field">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
