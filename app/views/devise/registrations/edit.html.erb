
<div class="devise_wrap">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,class: 'devise_form' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="inset">
    <h2 class="login_h2">ユーザー情報編集</h2>
    <p>
      <%= f.label :ニックネーム, class: "login" %><em class="login_em">(10文字以内)</em><br />
      <%= f.text_field :nick_name, autofocus: true, maxlength: "10", class: "login_input" %>
    </p>

    <p>
      <%= f.label :アイコン画像, class: "login" %>
      <%= f.file_field :icon_image, class: "file_icon login_input" %>
    </p>

    <p>
      <%= f.label :メールアドレス, class: "login" %><br />
      <%= f.email_field :email, autofocus: true, class: "login_input" %>
    </p>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <p>
      <%= f.label :パスワード, class: "login" %> <em class="login_em">(変更無しの場合は空欄)</em><br />
      <%= f.password_field :password, autocomplete: "off", class: "login_input" %>
      <% if @minimum_password_length %>
        <br />
        <em class="login_em"><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </p>

    <p>
      <%= f.label :パスワード（確認）, class: "login" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "login_input" %>
    </p>

    <p>
      <%= f.label :現在のパスワード, class: "login" %> <em class="login_em">(ユーザー情報の変更にはパスワードの入力が必要です)</em><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "login_input" %>
    </p>

    <p>
      <%= f.submit "更新", class: "login_input" %>
    </p>
  <% end %>

  <div class="p-container">
    <h3><em class="login_em">アカウントの削除</em></h3>
    <p><%= button_to "削除", registration_path(resource_name), data: { confirm: "削除してよろしいですか？" }, method: :delete %></p><br>

    <span><%= link_to "MyPageに戻る", :back, class: "login " %></span>
  </div>
  </div>
</div>
<% content_for :footer do %> <% end %>