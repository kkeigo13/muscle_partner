<% content_for :header do %> <% end %>
<div class="devise_wrap">




  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'devise_form',method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <div class="inset">
    <h2 class="login_h2">パスワードを忘れた方</h2>

    <p>
      <%= f.label :メールアドレス, class: "login" %>
      <%= f.email_field :email, autofocus: true, class: "login_input" %>
    </p>

    <p>
      <%= f.submit "確認メールを送信", class: "login_input" %>
    <p>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
<% content_for :footer do %> <% end %>